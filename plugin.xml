<?xml version="1.0" encoding="UTF-8"?>
<plugin title="amphetamine" loader="DEFAULT">
<overlays>
		<overlay id="startup.amphetamine" resourcebundle="content/amphetamine/resources/lang/messages">
			<menubar id="toolsmenu">
	        	<menuitem id="amphetamine" label="${Launcher.amphetamine}" command="mantleXulHandler.openUrl('${Launcher.amphetamine}','${Launcher.amphetamine_TOOLTIP}','plugin/amphetamine/api/default')"/>
	      	</menubar>
	    </overlay>
	</overlays>
	<lifecycle-listener class="pt.webdetails.cpk.CpkLifecycleListener"/>
	<static-paths>
		<static-path url="/amphetamine/static" localFolder="static"/>
		<static-path url="/amphetamine/resources" localFolder="resources"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>Amphetamine</title>
			<description></description>
			<company name="" url="" logo="@PLUGIN_COMPANY_LOGO@"></company>
		</content-type>
	</content-types>
	<content-generator
		id="amphetamine"
		title="Amphetamine"
		type="amphetamine"
		class="pt.webdetails.cpk.CpkContentGenerator"/>
	<!-- Menu entry -->
	<menu-items>
